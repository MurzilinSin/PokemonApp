<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="search_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@string/pokemon_search</item>


    </style>
    <style name="search_text_input_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>