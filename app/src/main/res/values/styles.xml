<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="search_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:hint">@string/pokemon_search</item>
    </style>
    <style name="search_text_input_edit_text_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="material_button_pokemon_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:backgroundTint">@color/fire</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="text_view_under_icon">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="image_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="progress_bar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bg</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="progress_bar_stat_name">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginTop">2dp</item>
       <item name="android:layout_marginStart">5dp</item>
       <item name="android:textColor">@color/black</item>
    </style>
    <style name="progress_bar_stat_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>